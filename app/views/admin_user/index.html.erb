<h2 class='title'> Welcome to Admin User</h2>

<%= link_to("+ Add Admin User",:action=>'new') %>
<h4 class='found'><%= pluralize(@admins.size,"User") %> are found</h4> 
<table >
<tr>
	<th>Username:</th>
	<th>First Name:</th>
	<th>Last Name:</th>
	<th>Email:</th>
	<th>Action</th>
</tr>
<% 	@admins.each do |admin| %>
<tr class='<%= cycle("odd","even") %>'>
	<td><%= admin.username %></td>
	<td><%= admin.first_name %></td>
	<td><%= admin.last_name %></td>
	<td><%= admin.email %></td>
	<td>
	<%= link_to("Edit",:action=>'edit',:id=>admin.id) %>
	<%= link_to("Delete",:action=>'delete',:id=>admin.id) %>
	</td>
</tr>
<% end %>
</table>