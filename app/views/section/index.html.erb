<%= link_to("<< Back Pages",:controller=>'pages',:id=>@page.id,:subject_id=>@subject.id) %>
<h2 class='title'> Welcome to Sections </h2>
<%= link_to("+ Add Section",:action=>'new',:page_id=>@page.id,:subject_id=>@subject.id) %>
<h4 class='found'><%= pluralize(@sections.size,"Section") %> found </h4>
<table>
<tr>
	<th>Position</th>
	<th>Page ID</th>
	<th>Name</th>
	<th>Visible</th>
	<th>Content Type</th>
	<th>Content</th>
	<th>Actions</th>
</tr>
<% @sections.each do |section| %>
<tr class="<%= cycle('odd','even') %>">
	<td><%= section.position %></td>
	<td><%= section.page_id %></td>
	<td><%= section.name %></td>
	<td><%= status_tag(section.visible) %></td>
	<td><%= section.content_type %></td>
	<td><%= truncate(section.content,:length=>12,:omission=>'...') %></td>
	<td class='action'>
	<%= link_to("Show",:action=>'show',:id=>section.id,:subject_id=>@subject.id,:page_id=>@page.id) %>
	<%= link_to("Edit",:action=>'edit',:id=>section.id,:subject_id=>@subject.id,:page_id=>@page.id) %>
	<%= link_to("Delete",:action=>'delete',:id=>section.id,:subject_id=>@subject.id,:page_id=>@page.id) %>
	</td>
	</tr> 	
<% end %>
</table>

